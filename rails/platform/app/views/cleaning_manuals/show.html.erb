<% content_for(:title) { "#{@manual.property_name} - 清掃マニュアル" } %>

<div class="w-full max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to "← 一覧に戻る", cleaning_manuals_path(client_code: @manual.client_code), class: "text-blue-600 hover:text-blue-800 text-sm" %>
  </div>

  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold"><%= @manual.property_name %></h1>
      <p class="text-gray-500"><%= @manual.room_type %></p>
    </div>
    <% if @manual.status == "published" %>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">公開</span>
    <% else %>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">下書き</span>
    <% end %>
  </div>

  <% data = @manual.manual_data.deep_symbolize_keys rescue @manual.manual_data %>

  <!-- サマリー -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-white shadow rounded-lg p-4 text-center">
      <p class="text-2xl font-bold text-blue-600"><%= data[:areas]&.size || 0 %></p>
      <p class="text-sm text-gray-500">エリア数</p>
    </div>
    <div class="bg-white shadow rounded-lg p-4 text-center">
      <p class="text-2xl font-bold text-blue-600"><%= data[:areas]&.sum { |a| a[:cleaning_steps]&.size || 0 } || 0 %></p>
      <p class="text-sm text-gray-500">清掃ステップ数</p>
    </div>
    <div class="bg-white shadow rounded-lg p-4 text-center">
      <p class="text-2xl font-bold text-blue-600"><%= data[:total_estimated_minutes] || 0 %></p>
      <p class="text-sm text-gray-500">推定所要時間（分）</p>
    </div>
    <div class="bg-white shadow rounded-lg p-4 text-center">
      <p class="text-2xl font-bold text-blue-600"><%= data[:supplies_needed]&.size || 0 %></p>
      <p class="text-sm text-gray-500">必要備品数</p>
    </div>
  </div>

  <!-- エリア別清掃手順 -->
  <% if data[:areas].present? %>
    <div class="space-y-6">
      <% data[:areas].each do |area| %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="bg-gray-50 px-6 py-4 border-b">
            <h2 class="text-lg font-semibold"><%= area[:area_name] %></h2>
          </div>
          <div class="p-6">
            <!-- 清掃ステップ -->
            <% if area[:cleaning_steps].present? %>
              <ol class="space-y-4">
                <% area[:cleaning_steps].each do |step| %>
                  <li class="flex gap-4">
                    <span class="flex-shrink-0 w-8 h-8 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-medium">
                      <%= step[:order] %>
                    </span>
                    <div class="flex-1">
                      <p class="font-medium"><%= step[:task] %></p>
                      <p class="text-sm text-gray-600 mt-1"><%= step[:description] %></p>
                      <div class="flex items-center gap-4 mt-2">
                        <span class="text-xs text-green-700 bg-green-50 px-2 py-1 rounded">✓ <%= step[:checkpoint] %></span>
                        <span class="text-xs text-gray-500">約<%= step[:estimated_minutes] %>分</span>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ol>
            <% end %>

            <!-- 品質基準 -->
            <% if area[:quality_standards].present? %>
              <div class="mt-4 pt-4 border-t">
                <h3 class="text-sm font-medium text-gray-700 mb-2">品質基準</h3>
                <ul class="list-disc list-inside text-sm text-gray-600 space-y-1">
                  <% area[:quality_standards].each do |standard| %>
                    <li><%= standard %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- 必要備品 -->
  <% if data[:supplies_needed].present? %>
    <div class="mt-8 bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold mb-4">必要備品・消耗品</h2>
      <div class="flex flex-wrap gap-2">
        <% data[:supplies_needed].each do |supply| %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-700"><%= supply %></span>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- アップロード画像 -->
  <% if @manual.images.attached? %>
    <div class="mt-8 bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold mb-4">参考画像</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% @manual.images.each do |image| %>
          <div class="rounded-lg overflow-hidden">
            <%= image_tag image, class: "w-full h-32 object-cover" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
